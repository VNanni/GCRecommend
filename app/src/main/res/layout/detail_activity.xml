<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BrowseActivity"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/detail_left_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.gc.recommend.fragment.DetailLeftFragment"
        android:layout_weight="2.5"/>

    <fragment
        android:id="@+id/detail_right_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.gc.recommend.fragment.DetailSelectFragment"
        android:layout_weight="1"/>
</LinearLayout>