<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_weight="0.5">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/guess_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cloth_icn"/>
            <TextView
                android:id="@+id/guess_left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cloth_icn"
                android:layout_below="@+id/guess_left"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/guess_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cloth_icn"/>
            <TextView
                android:id="@+id/guess_right_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cloth_icn"
                android:layout_below="@+id/guess_right"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>